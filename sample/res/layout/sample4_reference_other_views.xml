<?xml version="1.0" encoding="utf-8"?>
<com.github.mmin18.widget.FlexLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="320dp">

	<TextView
		android:id="@+id/view1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/color1"
		android:gravity="center"
		android:text="\n@+id/view1\n"
		app:layout_centerX="50%"
		app:layout_centerY="35%"/>

	<TextView
		android:id="@android:id/text1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/color2"
		android:gravity="center"
		android:text="\n@android:id/text1\n\nlayout_top=view1.bottom\nlayout_centerX=view1.centerX"
		app:layout_centerX="view1.centerX"
		app:layout_top="view1.bottom"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/color3"
		android:gravity="center"
		android:text="layout_bottom=view1.top\nlayout_centerX=view1.centerX"
		app:layout_bottom="view1.top"
		app:layout_centerX="view1.centerX"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/color4"
		android:gravity="center"
		android:text="layout_top=android:text1.bottom\nlayout_centerX=android:text1.centerX"
		app:layout_centerX="android:text1.centerX"
		app:layout_top="android:text1.bottom"/>

</com.github.mmin18.widget.FlexLayout>