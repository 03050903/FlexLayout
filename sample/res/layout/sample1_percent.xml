<?xml version="1.0" encoding="utf-8"?>
<com.github.mmin18.widget.FlexLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="400dp">

	<TextView
		android:layout_height="wrap_content"
		android:background="@color/color1"
		android:gravity="center"
		android:text="layout_left=10%\nlayout_right=90%\ncenterY=50%"
		app:layout_centerY="50%"
		app:layout_left="10%"
		app:layout_right="90%"/>

	<TextView
		android:background="@color/color2"
		android:gravity="center"
		android:text="layout_width=100%\nlayout_height=20%\nlayout_bottom=100%"
		app:layout_bottom="100%"
		app:layout_height="20%"
		app:layout_width="100%"/>

	<TextView
		android:layout_height="wrap_content"
		android:background="@color/color3"
		android:gravity="center"
		android:text="layout_width=40%"
		app:layout_width="40%"/>

	<TextView
		android:layout_height="wrap_content"
		android:background="@color/color4"
		android:gravity="center"
		android:text="layout_width=60%\nlayout_right=100%"
		app:layout_right="100%"
		app:layout_width="60%"/>

</com.github.mmin18.widget.FlexLayout>