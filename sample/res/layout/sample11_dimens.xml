<?xml version="1.0" encoding="utf-8"?>
<com.github.mmin18.widget.FlexLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="200dp">

	<View
		android:background="@color/color1"
		app:layout_height="2*@android:dimen/app_icon_size"
		app:layout_left="@dimen/default_margin"
		app:layout_top="@dimen/default_margin"
		app:layout_width="2*@android:dimen/app_icon_size"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="2 * @android:dimen/app_icon_size"
		app:layout_centerY="prev.centerY"
		app:layout_left="prev.right+@dimen/default_margin"/>

</com.github.mmin18.widget.FlexLayout>